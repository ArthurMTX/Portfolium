# Test environment variables
# This file is used for running tests locally

# Testing flag
TESTING=true

# Database (uses in-memory SQLite for tests)
DATABASE_URL=sqlite:///:memory:

# Security (use simple values for testing)
SECRET_KEY=test-secret-key-not-for-production-12345678901234567890
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Admin user (disabled for tests by default)
ADMIN_AUTO_CREATE=false
ADMIN_USERNAME=admin
ADMIN_EMAIL=admin@test.local
ADMIN_PASSWORD=testpassword123

# CORS (allow all for tests)
CORS_ORIGINS=["http://localhost:3000","http://localhost:8080"]

# Logging
LOG_LEVEL=INFO

# API Settings
API_V1_PREFIX=/api/v1
PROJECT_NAME=Portfolium Test

# Email (mock for tests)
EMAIL_ENABLED=false
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_USER=test
SMTP_PASSWORD=test
SMTP_FROM=noreply@test.local

# Scheduler (disabled for tests)
SCHEDULER_ENABLED=false

# Skip migrations during tests
SKIP_MIGRATIONS=true

# Cache settings
CACHE_TTL_SECONDS=300
